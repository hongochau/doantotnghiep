<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DangKy_DangNhap.XacMinhTaiKhoanActivity">

    <LinearLayout
        android:id="@+id/linearlayout_b2_khongtimthaytaikhoan"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_gravity="bottom|start"
        android:layout_marginLeft="29dp"
        android:layout_marginBottom="16dp"
        android:gravity="center|start"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_b2_khongthaytaikhoan"
            android:text="Lấy lại mã xác minh ?"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_b2_chuyentrang_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:backgroundTint="@color/colorPrimary"
        app:srcCompat="@drawable/ic_arrow_forward_black_24dp" />

    <include layout="@layout/content_xac_minh_tai_khoan" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>