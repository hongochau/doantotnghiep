<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DangKy_DangNhap.MatKhauActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView_quaylai_matkhau"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:adjustViewBounds="true"
            android:paddingLeft="16dp"
            android:paddingTop="10dp"
            android:paddingRight="16dp"
            android:paddingBottom="10dp"
            app:srcCompat="@drawable/ic_chevron_left_black_24dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="16dp"
            android:gravity="center|start"
            android:text="Nhập Mật Khẩu"
            android:textColor="@color/colorAccent"
            android:textSize="24dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorGray"
            android:text="Mật khẩu của bạn phải có từ 8 đến 20 ký tự bao gồm cả chữ và số"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="28dp"
            android:layout_marginLeft="28dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/editText_b3_nhapmatkhau"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:ems="10"
                    android:hint="Nhập mật khẩu"
                    android:inputType="textPassword"
                    android:textColorHint="@color/colorGray" />

                <ImageView
                    android:id="@+id/imageView_b3_cancel_nhapmatkhau"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:adjustViewBounds="true"
                    android:padding="16dp"
                    app:srcCompat="@drawable/ic_visibility_off_black_24dp" />
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/textView_b3_yeucau_matkhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Mật khẩu có từ 8 đến 20 ký tự bao gồm cả chữ và số"
            android:textColor="@color/colorRed"
            android:layout_marginLeft="30dp"
            android:textSize="12sp" />
        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_marginLeft="22dp"
            android:gravity="center|start"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/checkBox_b3_toichapnhan"
                android:text="Tôi chấp nhận"
                android:textSize="10dp"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </CheckBox>

            <TextView
                android:textColor="@color/colorRed"
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Điều Khoản" />

            <TextView
                android:textColor="@color/colorAccent"
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="bao gồm cả" />

            <TextView
                android:textColor="@color/colorRed"
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="chính sách bảo mật" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/checkBox_b3_thongtin"
            android:text="Tôi muốn bạn gửi cho Store thông tin và cập nhật qua email"
            android:textSize="10dp"
            android:layout_marginLeft="22dp"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/button_b3_dangky"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="29dp"
            android:layout_marginBottom="16dp"
            android:background="@color/colorAccent"
            android:textColor="@color/cardview_light_background"
            android:text="Đăng Ký" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>