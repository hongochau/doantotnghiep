<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.CaNhan.QuanLyDonHangActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageview_thoat"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_chevron" />

        <TextView
            android:id="@+id/textview_soluong"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="18dp"
            android:textColor="#FF9800"
            android:fontFamily="@font/roboto_bolditalic"
            android:gravity="center"
            android:text="Thông tin hóa đơn" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lvhoadon"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
